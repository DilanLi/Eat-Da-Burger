<h1>Eat Da Burger!</h1>


{{!-- order area --}}
<form class="order-area">
<img src="/images/burger.png" alt="burger-image">
<p>Order Your Burger Here: </p>
<textarea id="burger-name" name="burger-name" rows="4" cols="50"> </textarea>
<br>
<button type="button" id="submit">Make My Burger</button>
</form>



{{!-- burgers that haven't been eaten --}}
<div id="not-eaten">
{{#each burger_data }}
  {{#unless this.devoured}}
  <div class="list-item">
  <span class="burger-id">{{this.id}}</span>
  <span class="burger-name-text">{{this.burger_name}}</span>
  <button type="button" class="devour">Eat It!</button>
  <br>
</div>
  {{/unless}}
{{/each}}
</div>


{{!-- bugers that have been devoured --}}
<div id="eaten">
{{#each burger_data }}
  {{#if this.devoured}}
  <div class="list-item">
  <span class="burger-id">{{this.id}}</span>
  <span class="burger-name-text">{{this.burger_name}}</span>
  <br>
  </div>
  {{/if}}
{{/each}}
</div>





